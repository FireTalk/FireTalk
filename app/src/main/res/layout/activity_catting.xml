<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.kwongyo.firetalk.CattingActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main"
    >
    <RelativeLayout
        android:id="@+id/catting_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:background="#1E8ADC"
        >
        <TextView
            android:id="@+id/catting_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:padding="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/talking_room_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/catting_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질투의 화신 3화"
            />
        <ImageView
            android:id="@+id/emoticon_toggle_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="14dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_profile"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recyclerview"
        android:layout_below="@id/catting_action_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F1F1F1"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/icon_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_btn"
            android:padding="2dp"
            android:layout_marginLeft="-5dp"
            android:layout_centerVertical="true"

            />
        <EditText
            android:id="@+id/typing_message"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:background="@drawable/white"
            android:layout_centerVertical="true"
            android:focusableInTouchMode="true"
            android:hint="Typing Message"
            android:layout_marginLeft="34dp"
            android:paddingRight="34dp"
            />
        <TextView
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="보내기"
            android:layout_marginRight="4dp"
            android:layout_alignBaseline="@id/typing_message"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>
