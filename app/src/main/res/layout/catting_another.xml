<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.kwongyo.firetalk.CattingActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/another_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_profile"
        />
    <TextView
        android:id="@+id/another_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/another_profile_image"
        android:text="gong"
        />
    <TextView
        android:id="@+id/another_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_catbox"
        android:layout_below="@id/another_name"
        android:layout_toRightOf="@id/another_profile_image"
        />
</RelativeLayout>